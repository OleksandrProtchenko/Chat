# PostgreSQL DSN (замініть на свої USER, PASSWORD, HOST, DB_NAME)
DATABASE_URL=postgresql://USER:PASSWORD@HOST:5432/DB_NAME

# Сікрет для JWT
SECRET_KEY=CHANGE_ME_TO_RANDOM_64_CHARS

# Алгоритм підпису токена
ALGORITHM=HS256

# Час життя access-токена (хвилини)
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Шлях зберігання вкладень всередині контейнера/процесу
STORAGE_DIR=/app/storage

# Обмеження кількості файлів в одному повідомленні
MAX_FILES_PER_MESSAGE=10